{
  "name": "clean-node-api",
  "version": "1.2.1",
  "description": "NodeJs, Typescript, TDD, DDD, Clean Architecture e SOLID",
  "author": "Pedro Padilha Portella",
  "repository": "github:PedroPadilhaPortella/clean-node-api",
  "license": "ISC",
  "keywords": [],
  "main": "index.js",
  "scripts": {
    "start": "sucrase-node ./src/main/server.ts",
    "build": "rimraf dist && tsc",
    "start:prod": "node ./dist/main/server.js",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0:9222 --nolazy ./dist/main/server.js",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "jest --runInBand",
    "test:unit": "npm test -- --watch -c jest-unit.config.js",
    "test:integration": "npm test -- --watch -c jest-e2e.config.js",
    "test:commit": "npm test",
    "test:ci": "npm test -- --coverage",
    "docker-up": "npm run build && docker-compose up",
    "docker-stop": "docker-compose down",
    "prepare": "husky install"
  },
  "engines": {
    "node": "16.x"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "express": "^4.18.2",
    "husky": "^8.0.2",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "4.12",
    "nodemon": "^2.0.20",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.1.4",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.3",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^18.11.9",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.10",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-standard": "^5.0.0",
    "git-commit-msg-linter": "^4.4.0",
    "jest": "^29.3.1",
    "lint-staged": "^13.0.4",
    "mockdate": "^3.0.5",
    "rimraf": "^3.0.2",
    "sucrase": "^3.29.0",
    "supertest": "^6.3.2",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.3"
  }
}
