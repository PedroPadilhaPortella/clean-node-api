{
    "extends": "standard-with-typescript",
    "parserOptions": {
        "project": "./tsconfig.eslint.json"
    },
    "rules": {
        "@typescript-eslint/strict-boolean-expressions": "off",
        "@typescript-eslint/no-misused-promises": "off",
        "@typescript-eslint/quotes": "off",
        "comma-dangle": "off",
        "eol-last": "off",
        "no-trailing-spaces": "off",
        "padded-blocks": "off"
    }
}